{
  "name": "try-flux-architecture",
  "version": "0.0.1",
  "description": "just learn flux architecture",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "build": "browserify src/entry.js -o public/bundle.js -t [ babelify ] --debug",
    "watch": "npm run build && open public/index.html; watchify src/entry.js -o public/bundle.js -t [ babelify ] -v --debug",
    "test": "ava --verbose && npm run lint",
    "lint": "eslint -c ./.eslintrc.yml \"./src/**/*.js\" \"./test/**/*.js\""
  },
  "author": "qrg",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "eslint": "^3.5.0",
    "eslint-plugin-react": "^6.2.2",
    "open": "7.2.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "react": "^15.3.1",
    "react-dom": "^15.3.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "sourceMaps": true
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "failFast": true,
    "timeout": "4s",
    "require": [
      "babel-register"
    ]
  }
}
